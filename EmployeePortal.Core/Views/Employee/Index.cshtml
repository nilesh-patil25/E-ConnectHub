
@model IEnumerable<CRUDOPERATION.Models.Employee> // Show List  data on view
@{
    ViewData["Title"] = "Index";
}

<div class="container">
    <div class="row">
        <div class="col-8 offset-2"> <!--Divide screen into 8 col-->
            <h1 class="text-center text-primary">
                Employee Record
            </h1>&nbsp;
            
            <table class="table table-bordered">
                <tr class="text-center">
                    <th>Employee Id</th>
                    <th>Name</th>
                    <th>City</th>
                    <th>state</th>
                    <th>Salary</th>
                    <th>Action</th>
                </tr>
            @foreach (var d in Model)
            {
                <tr class="text-center">
                    <td>@d.ID</td>
                    <td>@d.Name</td>
                    <td>@d.City</td>
                    <td>@d.State</td>
                    <td>@d.Salary</td>
                    <td>
                        <a class="btn btn-sm btn-warning" asp-controller="Employee" asp-action="Edit" asp-route-id="@d.ID">Edit</a>
                        <a class="btn btn-sm btn-danger" asp-controller="Employee" asp-action="Delete" asp-route-id="@d.ID">Delete</a>

                    </td>
                </tr>
            }
            </table>
           <a class="btn btn-sm btn-success m-4" asp-controller="Employee" asp-action="Create">Create</a>
           <p class="text-center text-success">@TempData["error"]</p>


        </div>
    </div>

</div>

